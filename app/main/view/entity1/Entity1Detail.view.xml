<mvc:View
    controllerName="yo.test.controller.entity1.Entity1Detail"
    xmlns:html="http://www.w3.org/1999/xhtml" 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:tnt = "sap.tnt">
    <uxap:ObjectPageLayout
        busy="local>/busy">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:heading>
                    <Title
                        text="DETAIL"
                        level="H2"/>
                </uxap:heading>
                <uxap:actions>
                    <Button
                        id="editButton"
                        text="EDIT" 
                        visible="false"
                        press="onPressEditButton"/>
                </uxap:actions>
                <uxap:actions>
                    <Button
                        id="saveButton"
                        text="SAVE"
                        visible="false"
                        press="onPressSaveButton"/>
                </uxap:actions>
                <uxap:actions>
                    <Button
                        id="cancelButton"
                        text="CANCEL"
                        visible="false"
                        press="onPressCancelButton"/>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <layout:VerticalLayout>
                <!--TODO-->
            </layout:VerticalLayout>
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection
                showTitle="false">
                <uxap:ObjectPageSubSection
                    id="fragmentSubSection">
<!--
                    <core:Fragment
                        fragmentName="yo.test.view.entity1.Entity1Update"
                        type="XML" />
-->
                </uxap:ObjectPageSubSection>
                <uxap:ObjectPageSubSection>

                </uxap:ObjectPageSubSection>
                <uxap:ObjectPageSubSection>
                    <Table
                        width="auto"
                        items="{
                            path: 'entity>entities2',
                            sorter: {
                                path: 'ID',
                                descending: false
                            }
                        }"
                        busy="{local>/busy}"
                        noDataText="NO DATA">
                        <columns>
                            <Column>
                                <Text text="Title"/>
                            </Column>
                            <Column>
                                <Text text="Description"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <ObjectIdentifier
                                        text="{entity>title}" />
                                    <Text
                                        text="{entity>descr}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </uxap:ObjectPageSubSection>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>